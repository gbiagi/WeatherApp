<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cat.esteveterradas.WeatherFetchController"
            prefHeight="800.0" prefWidth="800.0">
    <!-- Search Bar -->
    <TextField fx:id="searchBar" layoutX="200.0" layoutY="200.0" prefWidth="400.0" promptText="Enter city name"/>

    <!-- Accept Button -->
    <Button fx:id="acceptButton" layoutX="200.0" layoutY="250.0" text="Accept"/>

    <!-- Close Button -->
    <Button fx:id="closeButton" layoutX="400.0" layoutY="250.0" text="Close"/>
</AnchorPane>
